	$(function(){
		$("#register").submit(function(e){
			e.preventDefault();
			/* 아이디 검증 */
			if(!regex.value("#userid", "아이디를 입력하세요")){return false;}
			if(!regex.uid("#userid", "아이디는 영문과 숫자만 가능합니다. 첫 글자에 숫자는 올 수 없습니다.")){return false;}
			if(!regex.max_length("#userid",  10, "최대 10자 까지 가능합니다.")){return false;}
			
			/* 비밀번호 검증*/
			if(!regex.value("#userpass", "비밀번호를 입력하세요.")){return false;}
			if(!regex.min_length("#userpass", 4, "비밀번호는 최소 4자 이상 입니다.")){return false;}
			if(!regex.value("#reuserpass", "비밀번호를 다시 확인해 주세요.")){return false;}
			if(!regax.equalField("#userpass", "#reuserpass", "비밀번호가 일치하지 않습니다.")){return false};
			
			
			
		});
	});