const regex = {
	value: function(selector, msg) {
		var target = $(selector); //선택한 변수를 target에 저장
		if(!target.val()){        //target에 값이 없으면
			alert(msg);       //메세지 변수를 표시
			target.focus();
			return false;
		}
		return true;
	},
	
	/* max길이 제한 */
	max_length : function(selector, len, msg) {
		var target = $(selector);
		if(target.val().length > len) {
			alert(msg);
			target.val("");
			target.focus();
			return false;
		}
		return true;
	},
	
	/* min길이 제한 */
	min_length : function(selector, len, msg) {
		var target = $(selector);
		if(target.val().length < len) {
			alert(msg);
			target.val("");
			target.focus();
			return false;
		}
		return true;
	},
	
	/* 입력값이 정규식과 맞는 지 */
	Field : function(selector, msg, regex_expr){
		var target = $(selector);
		if(!target.val() || regex_expr.test(target.val())){
			alert(msg);
			target.val("");
			target.focus();
			return false;
		}
		return true;
	}
}